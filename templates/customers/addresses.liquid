<div class="customer-container customer-container--no-pt text-center">
    {% paginate customer.addresses by 5 %}

    <header role="banner">
        <h1>{{ 'customer.account.title' | t }}</h1>

        <div class="button-wrapper">
            <button type="button" class="button address-new-toggle">{{ 'customer.addresses.add_new' | t }}</button>
            <a class="button" href="/account">{{ 'customer.account.return' | t }}</a>
        </div>

    </header>


    <div id="AddressNewForm" class="customer-form hide">
        {% form 'customer_address', customer.new_address %}
        {{ form.errors | default_errors }}
        <h2>{{ 'customer.addresses.add_new' | t }}</h2>

        <div class="input-wrapper">
            <label class="label-required" for="AddressFirstNameNew">
                {{ 'customer.addresses.first_name' | t }}
            </label>
            <input type="text"
                   name="address[first_name]"
                   id="AddressFirstNameNew"
                   required
                   value="{{ form.first_name }}"
                   autocapitalize="words">
        </div>

        <div class="input-wrapper">
            <label class="label-required" for="AddressLastNameNew">
                {{ 'customer.addresses.last_name' | t }}
            </label>
            <input type="text"
                   name="address[last_name]"
                   id="AddressLastNameNew"
                   required
                   value="{{ form.last_name }}"
                   autocapitalize="words">
        </div>

        <div class="input-wrapper">
            <label for="AddressCompanyNew">
                {{ 'customer.addresses.company' | t }}
            </label>
            <input type="text"
                   name="address[company]"
                   id="AddressCompanyNew"
                   value="{{ form.company }}"
                   autocapitalize="words">
        </div>

        <div class="input-wrapper">
            <label for="AddressAddress1New">
                {{ 'customer.addresses.address1' | t }}
            </label>
            <input type="text"
                   name="address[address1]"
                   id="AddressAddress1New"
                   value="{{ form.address1 }}"
                   autocapitalize="words">
        </div>

        <div class="input-wrapper">
            <label for="AddressAddress2New">
                {{ 'customer.addresses.address2' | t }}
            </label>
            <input type="text"
                   name="address[address2]"
                   id="AddressAddress2New"
                   value="{{ form.address2 }}"
                   autocapitalize="words">
        </div>

        <div class="input-wrapper">
            <label for="AddressCityNew">
                {{ 'customer.addresses.city' | t }}
            </label>
            <input type="text"
                   name="address[city]"
                   id="AddressCityNew"
                   value="{{ form.city }}"
                   autocapitalize="words">
        </div>

        <div class="input-wrapper">
            <label class="label-required" for="AddressCountryNew">
                {{ 'customer.addresses.country' | t }}
            </label>
            <select
                    class="js-select-2"
                    name="address[country]"
                    id="AddressCountryNew"
                    required
                    data-default="{{ form.country }}">
                {{ country_option_tags }}
            </select>
        </div>


        <div id="AddressProvinceContainerNew" class="input-wrapper" style="display: none">
            <div class="input-wrapper">

                <div class="input-wrapper">
                    <label for="AddressProvinceNew">
                        {{ 'customer.addresses.province' | t }}
                    </label>
                    <select
                            class="js-select-2"
                            name="address[province]"
                            id="AddressProvinceNew"
                            data-default="{{ form.province }}">
                    </select>
                </div>
            </div>
        </div>


        <div class="input-wrapper">
            <label for="AddressZipNew">
                {{ 'customer.addresses.zip' | t }}
            </label>
            <input type="text"
                   name="address[zip]"
                   id="AddressZipNew"
                   value="{{ form.zip }}"
                   autocapitalize="characters">
        </div>

        <div class="input-wrapper">
            <label for="AddressPhoneNew">
                {{ 'customer.addresses.phone' | t }}
            </label>
            <input type="tel"
                   name="address[phone]"
                   id="AddressPhoneNew"
                   value="{{ form.phone }}"
                   pattern="[0-9\-]*">
        </div>

        <div class="input-wrapper">
            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_new">
                {{ 'customer.addresses.set_default' | t }}
            </label>
        </div>

        <input type="submit" class="button" value="{{ 'customer.addresses.add' | t }}">
        <button type="button" class="button address-new-toggle">
            {{ 'customer.addresses.cancel' | t }}
        </button>

        {% endform %}

    </div>

    <h2>{{ 'customer.addresses.title' | t }}</h2>

    {% for address in customer.addresses %}

        {% if address == customer.default_address %}
            <p><strong>{{ 'customer.addresses.default' | t }}</strong></p>
        {% endif %}
        {{ address | format_address }}

        <div class="button-wrapper">
            <button type="button" class="button address-edit-toggle" data-form-id="{{ address.id }}">
                {{ 'customer.addresses.edit' | t }}
            </button>
            <button type="button" class="button address-delete" data-form-id="{{ address.id }}"
                    data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                {{ 'customer.addresses.delete' | t }}
            </button>
        </div>

        <div id="EditAddress_{{ address.id }}" class="customer-form hide">
            {% form 'customer_address', address %}

            <h4>{{ 'customer.addresses.edit_address' | t }}</h4>

            <div class="input-wrapper">
                <label for="AddressFirstName_{{ form.id }}">
                    {{ 'customer.addresses.first_name' | t }}
                </label>
                <input type="text"
                       name="address[first_name]"
                       id="AddressFirstName_{{ form.id }}"
                       value="{{ form.first_name }}"
                       autocapitalize="words">
            </div>

            <div class="input-wrapper">
                <label for="AddressLastName_{{ form.id }}">
                    {{ 'customer.addresses.last_name' | t }}
                </label>
                <input type="text"
                       name="address[last_name]"
                       id="AddressLastName_{{ form.id }}"
                       value="{{ form.last_name }}"
                       autocapitalize="words">
            </div>

            <div class="input-wrapper">
                <label for="AddressCompany_{{ form.id }}">
                    {{ 'customer.addresses.company' | t }}
                </label>
                <input type="text"
                       name="address[company]"
                       id="AddressCompany_{{ form.id }}"
                       value="{{ form.company }}"
                       autocapitalize="words">
            </div>

            <div class="input-wrapper">
                <label for="AddressAddress1_{{ form.id }}">
                    {{ 'customer.addresses.address1' | t }}
                </label>
                <input type="text"
                       name="address[address1]"
                       id="AddressAddress1_{{ form.id }}"
                       value="{{ form.address1 }}"
                       autocapitalize="words">
            </div>

            <div class="input-wrapper">
                <label for="AddressAddress2_{{ form.id }}">
                    {{ 'customer.addresses.address2' | t }}
                </label>
                <input type="text"
                       name="address[address2]"
                       id="AddressAddress2_{{ form.id }}"
                       value="{{ form.address2 }}"
                       autocapitalize="words">
            </div>

            <div class="input-wrapper">
                <label for="AddressCity_{{ form.id }}">
                    {{ 'customer.addresses.city' | t }}
                </label>
                <input type="text"
                       name="address[city]"
                       id="AddressCity_{{ form.id }}"
                       value="{{ form.city }}"
                       autocapitalize="words">
            </div>

            <div class="input-wrapper">
                <label for="AddressCountry_{{ form.id }}">
                    {{ 'customer.addresses.country' | t }}
                </label>
                <select
                        name="address[country]"
                        id="AddressCountry_{{ form.id }}"
                        class="js-select-2 address-country-option"
                        data-form-id="{{ form.id }}"
                        data-default="{{ form.country }}">
                    {{ country_option_tags }}
                </select>
            </div>


            <div id="AddressProvinceContainer_{{ form.id }}" class="input-wrapper" style="display: none">
                <div class="input-wrapper">
                    <label for="AddressProvince_{{ form.id }}">
                        {{ 'customer.addresses.province' | t }}
                    </label>
                    <select
                            class="js-select-2"
                            name="address[province]"
                            id="AddressProvince_{{ form.id }}"
                            data-default="{{ form.province }}">
                    </select>
                </div>
            </div>


            <div class="input-wrapper">
                <label for="AddressZip_{{ form.id }}">
                    {{ 'customer.addresses.zip' | t }}
                </label>
                <input type="text"
                       name="address[zip]"
                       id="AddressZip_{{ form.id }}"
                       value="{{ form.zip }}"
                       autocapitalize="characters">
            </div>

            <div class="input-wrapper">
                <label for="AddressPhone_{{ form.id }}">
                    {{ 'customer.addresses.phone' | t }}
                </label>
                <input type="tel"
                       name="address[phone]"
                       id="AddressPhone_{{ form.id }}"
                       value="{{ form.phone }}"
                       pattern="[0-9\-]*">
            </div>

            <div class="input-wrapper">
                {{ form.set_as_default_checkbox }}
                <label class="checkbox-label" for="address_default_address_{{ form.id }}">
                    {{ 'customer.addresses.set_default' | t }}
                </label>
            </div>

            <input type="submit" class="button" value="{{ 'customer.addresses.update' | t }}">
            <button type="button" class="button address-edit-toggle" data-form-id="{{ form.id }}">
                {{ 'customer.addresses.cancel' | t }}
            </button>

            {% endform %}

        </div>
    {% endfor %}

    {% if paginate.pages > 1 %}
        {% include 'pagination' %}
    {% endif %}

    {% endpaginate %}
</div>


